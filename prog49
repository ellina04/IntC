#include <iostream>
using namespace std;

int main() {
    int num, a, b, c, sum, prod;
    cout << "Введите трехзначное число: ";
    cin >> num;

    a = num / 100;
    b = (num / 10) % 10;
    c = num % 10;

    sum = a + b + c;
    prod = a  b  c;

    cout << "Сумма шифр числа " << num << " равна " << sum << endl;
    cout << "Произведение шифр числа " << num << " равно " << prod << endl;

    return 0;
}
