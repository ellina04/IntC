#include <iostream>
using namespace std;

int main() {
    double V, U, T1, T2, S1, S2, S;
    cout << "Введите скорость лодки в стоячей воде (км/ч): ";
    cin >> V;
    cout << "Введите скорость течения реки (км/ч): ";
    cin >> U;
    cout << "Введите время движения лодки по озеру (ч): ";
    cin >> T1;
    cout << "Введите время движения лодки против течения реки (ч): ";
    cin >> T2;

    // Расчет расстояний
    S1 = V  T1;
    S2 = (V - U)  T2;

    // Общий пройденный путь
    S = S1 + S2;

    cout << "Пройденный путь: " << S << " км" << endl;

    return 0;
}
