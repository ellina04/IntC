#include <iostream>
using namespace std;

int main() {
    int a, b;
    cout << "Введите два числа: ";
    cin >> a >> b;
    if ((a % 2 != 0 && b % 2 == 0) || (a % 2 == 0 && b % 2 != 0)) {
        cout << "Ровно одно из чисел " << a << " и " << b << " нечетное" << endl;
    } else {
        cout << "Условие не выполнено" << endl;
    }
    return 0;
}
