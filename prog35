#include <iostream>
using namespace std;

int main() {
    double x, y, a, b; // вводим переменные для веса и стоимости
    cout << "Введите вес шоколадных конфет (в кг): ";
    cin >> x;
    cout << "Введите стоимость шоколадных конфет (в рублях): ";
    cin >> a;
    cout << "Введите вес ирисок (в кг): ";
    cin >> y;
    cout << "Введите стоимость ирисок (в рублях): ";
    cin >> b;

    double costchoco = a / x; // стоимость 1 кг шоколадных конфет
    double costiris = b / y; // стоимость 1 кг ирисок
    double ratio = costchoco / costiris; // отношение стоимости шоколадных конфет к ирискам

    cout << "1 кг шоколадных конфет стоит " << costchoco << " рублей" << endl;
    cout << "1 кг ирисок стоит " << costiris << " рублей" << endl;
    cout << "Шоколадные конфеты дороже ирисок в " << ratio << " раз(а)" << endl;

    return 0;
}
