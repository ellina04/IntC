#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Введите три целых числа: ";
    cin >> a >> b >> c;
    if ((a == -b)  (b == -c)  (a == -c)) {
        cout << "Среди трех данных целых чисел есть хотя бы одна пара взаимно противоположных" << endl;
    } else {
        cout << "Среди трех данных целых чисел нет взаимно противоположных пар" << endl;
    }
    return 0;
}
